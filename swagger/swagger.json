{
    "swagger": "2.0",
    "info": {
      "title": "URL Shortener API",
      "description": "API documentation for the URL Shortener application.",
      "version": "1.0.0"
    },
    "paths": {
      "/shorten": {
        "post": {
          "summary": "Shorten a URL",
          "parameters": [
            {
              "name": "url",
              "in": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully shortened URL"
            }
          }
        }
      }
    }
  }
  